<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 중앙 화면 -->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/toolbar_division" />
    <!-- 중앙 화면과 Bottom Navigation View 나누는 선-->
    <LinearLayout
        android:id="@+id/nav_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottom_navigation"
        android:background="@color/colorDivision"
        android:orientation="horizontal" />
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tab_home2" />
        <ImageView
            android:id="@+id/tab_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tab_search1" />
        <ImageView
            android:id="@+id/tab_add_photo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tab_post" />

        <ImageView
            android:id="@+id/tab_alarm"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:paddingHorizontal="25dp"
            android:scaleType="centerInside"
            android:src="@drawable/tab_heart1" />
        <ImageView
            android:id="@+id/tab_profile"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tab_profile1" />


    </LinearLayout>

    <!-- Bottom Navigation View -->
